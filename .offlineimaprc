# Looking for a quick start?  Take a look at offlineimap.conf.minimal.


##################################################
# General definitions
##################################################

[general]
metadata = ~/.mail
accounts = gmail
maxsyncaccounts = 1
ui = ttyui
ignore-readonly = no
pythonfile = ~/.offlineimap.py
socktimeout = 60
fsync = false

##################################################
# Accounts
##################################################

[Account gmail]
localrepository = gmail-local
remoterepository = gmail-remote
autorefresh = 5
quick = 5

[Repository gmail-local]
type = Maildir
sep = /
localfolders = ~/.mail/gmail

[Repository gmail-remote]
type = Gmail
ssl = yes
sslcacertfile = /usr/local/opt/curl-ca-bundle/share/ca-bundle.crt
remoteuser = me@nathankot.com
remotepasseval = get_keychain_pass(account="me@nathankot.com", server="imap.gmail.com")
maxconnections = 2
holdconnectionopen = no
subscribedonly = no
folderfilter = lambda folder: folder not in ['[Gmail]/Trash',
                                             '[Gmail]/All Mail',
                                             '[Gmail]/Important',
                                             '[Gmail]/Spam',
                                             ]
