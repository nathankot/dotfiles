# reloading
reload-threads 4
reload-only-visible-feeds no
show-read-feeds yes
download-retries 4

# display
article-sort-order date-desc
feedlist-format "%S%n %11u %t"
articlelist-format "%D %f %?T?;%-17T; ?%t"
datetime-format %m-%d

max-items 200

bind-key k up
bind-key j down

# Colors
color info color8 black
color listnormal default black
color listnormal_unread red black
color listfocus  default color7
color listfocus_unread red color7
color background default black

browser open -g

bookmark-cmd "~/.newsbeuter/send-to-pocket.sh"
