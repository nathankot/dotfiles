
set :timer, 25 * 60
set :interval, 1
set :tmux, true
set :tmux_theme, '#[fg=yellow,bg=colour7]#[fg=%s]%s'

option :b, :break, 'start a break' do
  set :timer, 5 * 60
  `say 'You have 5 Minutes.'`
  run
end

option :t, :time, 'start timer' do
  set :timer, 25 * 60
  `say 'You have 25 Minutes.'`
  run
end

before do
end

after do |seconds_left|
  if seconds_left == 0
    `say 'Time for a break.'`
  end
end

